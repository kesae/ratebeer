<h1>Beers</h1>
<table id="beers" class="table table-striped">
  <thead>
    <tr>
      <th><%= link_to "Name", beers_path(order: "name")%></th>
      <th><%= link_to "Style", beers_path(order: "style")%></th>
      <th><%= link_to "Brewery", beers_path(order: "brewery")%></th>
      <th><%= link_to "Rating", beers_path(order: "rating")%></th>
    </tr>
  </thead>
  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= link_to beer.style %></td>
        <td><%= link_to beer.brewery %></td>
        <td><%= if beer.ratings.length > 0 then round(beer.average_rating) else 0.0 end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to("New beer", new_beer_path) if current_user %>
<p>
  <%= link_to "List of breweries", breweries_path %>
</p>
