<%= render @brewery %>
  <%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), data: {turbo_method: "post"}, class: "btn btn-primary" %>
<div>
  <% if current_user%>
    <%= link_to("Edit this brewery", edit_brewery_path(@brewery)) %> |
  <% end %>
  <%= link_to "Back to breweries", breweries_path %>
  <%= button_to("Destroy this brewery", @brewery, {method: :delete, class: "btn btn-primary mt-2"}) if current_user %>
</div>
