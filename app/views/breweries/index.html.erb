<h1>Listing breweries</h1>
<p>Number of active breweries: <%= @active_breweries.count %></p>
<div id="active_breweries">
  <% @active_breweries.each do |brewery| %>
    <div class="card mb-3 p-2" id="<%= dom_id brewery %>">
      <p class="card-title">
        <%= link_to brewery.name, brewery %>
      </p>
      <p class="card-text">
        <strong>Year:</strong>
        <%= brewery.year %>
      </p>
    </div>
  <% end %>
</div>
<p>Number of retired breweries: <%= @retired_breweries.count %></p>
<div id="retired_breweries">
  <% @retired_breweries.each do |brewery| %>
    <div class="card mb-2 p-2" id="<%= dom_id brewery %>">
      <p class="card-title">
        <%= link_to brewery.name, brewery %>
      </p>
      <p class="card-text">
        <strong>Year:</strong>
        <%= brewery.year %>
      </p>
    </div>
  <% end %>
</div>
<%= link_to "New brewery", new_brewery_path if current_user %>
<p>
  <%= link_to "List of beers", beers_path %>
</P>
